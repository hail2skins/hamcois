<h1><%= @article.title %></h1>

<%= markdown(@article.content).html_safe %>

<% if @article.comments.any? %>
<h2>Comments</h2>
	<%= render @article.comments %>
<% end %>

<% if signed_in? && current_user.admin? %>
	<h2>Add a comment:</h2>
	<%= render "comments/form" %>
<% end %>
<% if signed_in? && current_user.admin? %>
	<%= link_to 'Edit', edit_article_path(@article) %> |
<% end %>
<%= link_to 'Back', root_path %>
